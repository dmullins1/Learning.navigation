<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Learning.navigation.MainPage"
             Title=" Learning navigation">

    <StackLayout BackgroundColor ="{StaticResource Canvas}">
        <Frame BackgroundColor="Cornsilk" Padding=" 24" CornerRadius="0">
            <Label Text=" Learning navigation" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
        </Frame>
        <Button Text="Push navigation" Clicked="PushPage"/>
        <Button Text="Push navigation (No Animation)" Clicked="PushPageNoAnimation"/>
        <Button Text= "Modal" Clicked = "ModalButton"/>
    </StackLayout>

</ContentPage>
